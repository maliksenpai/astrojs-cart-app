---
import 'bootstrap/dist/css/bootstrap.css';
import Layout from '../layouts/Layout.astro';
import CartList from '../components/vue/CartList.vue';
import CartItemSelectList from '../components/react/CartItemSelectList.jsx';
import PriceCard from '../components/vue/PriceCard.vue';
---

<Layout title="Checkout">
	<div class="checkout-page">
		<div class="checkout-page-layout">
			<CartItemSelectList client:load />
			<CartList client:load />
			<PriceCard client:only />
		</div>
	</div>
</Layout>

<style is:global>
	.checkout-page {
		height: 100%;
		background: url('../assets/bg_bggenerator_com.png');
    	width: 100%;
	    background-attachment: fixed;
	}

	.checkout-page-layout {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		grid-template-rows: 1fr;
		grid-column-gap: 1rem;
		grid-row-gap: 0px;
		padding-block: 5rem;
		padding-inline: 10rem;
	}
</style>
